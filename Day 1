//Simple Calculator//

#include<iostream>
using namespace std;
int main(){
	char op;
	float num1, num2;
	cout<<"Num1: ";
	cin>>num1;
		cout<<"Num2: ";
	cin>>num2;
		cout<<"op: ";
		cin>>op;
	switch(op){
		case'+':
			cout<<num1+num2;
			break;
		case'-':
			cout<<num1-num2;
			break;
		case'*':
			cout<<num1*num2;
			break;
		case'/':
			cout<<num1/num2;
			break;
		default:
			cout<<"Error";
	}
			return 0;			
}





//take user input of two numbers take input for opeartion to perform and print the ans //


#include <iostream>
using namespace std;
int main() {
    double num1, num2, result;
    char op;
    cout << "Enter first num: ";
    cin >> num1;
    cout << "Enter second num: ";
    cin >> num2;
    cout << "Enter an op(+, -, *, /): ";
    cin >> op;
    switch (op) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        case '/':
            if (num2 != 0) {
                result = num1 / num2;
            } else {
                cout << "Error: Division by zero is not allowed." << endl;
                return 1;
            }
            break;
        default:
            cout << "Error: Invalid operation." << endl;
            return 1;
    }
    cout << "Result is: " << result << endl;

    return 0;
}

